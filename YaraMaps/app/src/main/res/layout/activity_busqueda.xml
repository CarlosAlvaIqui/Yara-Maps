<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Busqueda"
    android:background="@drawable/fondo3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Que esta buscando?" />

            <EditText
                android:id="@+id/txtArticulo"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/oval"
                android:hint="¿Que esta buscando?"
                android:padding="8dp"

                />

            <ImageView
                android:id="@+id/btnBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onclick_buscar"
                app:srcCompat="@drawable/buscar_azul" />

            <ListView
                android:id="@+id/listProductos"
                android:layout_width="match_parent"
                android:layout_height="336dp"

                >

            </ListView>

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="agregar_onclick"
                android:text="Agregar Nuevo Producto" />

            <Button
                android:id="@+id/btnProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listar TODOS los productos" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>